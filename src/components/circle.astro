---
interface Props {
  size?: "sm" | "md" | "lg";
}

const { size = "md" } = Astro.props;
---

<div data-size={{ size }}></div>

<style scoped>
  div {
    border-color: var(--text);
    border-style: solid;
    border-width: 6px;
    border-radius: 100%;
    background-color: var(--bg);
    width: 1.5rem;
    height: 1.5rem;

    &[data-size="md"] {
      width: 2.5rem;
      height: 2.5rem;
    }

    &[data-size="lg"] {
      width: 3.5rem;
      height: 3.5rem;
    }
  }
</style>
