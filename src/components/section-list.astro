---
interface Props {
  items: string[] | HTMLElement[];
}

const { items } = Astro.props;
---

<ul>
  {
    items.map((item) => (
      <li>
        <p>{item}</p>
      </li>
    ))
  }
</ul>

<style scoped lang="scss">
  ul {
    display: flex;
    flex-direction: column;
    gap: 2.5rem;
    padding: 0;
    list-style-type: none;

    li p {
      margin: 0;
      font-size: 1.2rem;
      font-weight: 300;
      line-height: 1.8rem;
    }
  }
</style>
