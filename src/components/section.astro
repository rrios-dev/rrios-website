---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<section>
  <h1>
    {title}
  </h1>
  <slot />
</section>

<style scoped lang="scss">
  section {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    padding: 0 1rem;
    max-width: 1024px;

    @media (min-width: 992px) {
      flex-direction: row;
      gap: 7.5rem;
    }

    h1 {
      white-space: nowrap;
    }
  }

  @media (min-width: 1240px) {
    section {
      padding: 1rem 0;
    }
  }
</style>
