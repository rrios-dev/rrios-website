---
import ContactForm from "../../components/contact-form";
import { LOCALE_STATIC_PATHS } from "../../i18n/constants";
import useTranslation from "../../i18n/use-translation";
import Layout from "../../layouts/Layout.astro";

const t = useTranslation(Astro.url);

export async function getStaticPaths() {
  return LOCALE_STATIC_PATHS;
}
---

<Layout title={`rrios | Software Developer | ${t("contact", "title")}`}>
  <ContactForm
    client:load
    translations={{
      title: t("contact", "introduction"),
      email: {
        placeholder: t("contact", "form.email.placeholder"),
        error: t("contact", "form.email.error"),
      },
      content: {
        placeholder: t("contact", "form.content.placeholder"),
        error: t("contact", "form.content.error"),
      },
      name: {
        placeholder: t("contact", "form.name.placeholder"),
        error: t("contact", "form.name.error"),
      },
      error: t("contact", "form.error"),
      success: t("contact", "form.success"),
      submit: t("contact", "form.submit"),
    }}
  />
</Layout>

<style scoped lang="scss"></style>
